<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FBDE3F"
        tools:context=".MainActivity15">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="415dp"
                android:layout_height="547dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bf" />

        <ImageButton
            android:id="@+id/backButton1"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="301dp"
            android:layout_marginBottom="169dp"
            android:background="@drawable/circle_background"
            android:foregroundGravity="center"
            android:paddingLeft="8dp"
            android:src="@drawable/icn"
            app:layout_constraintBottom_toTopOf="@+id/imageView6"
            app:layout_constraintEnd_toStartOf="@+id/backButton1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="DuplicateIds,NotSibling,SpeakableTextPresentCheck,TouchTargetSizeCheck"
            android:contentDescription="TODO" />

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="37dp"
            android:layout_height="38dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="169dp"
            android:background="@drawable/circle_background"
            android:foregroundGravity="center"
            android:src="@drawable/hertobv"
            app:layout_constraintBottom_toTopOf="@+id/imageView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.956"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="594dp"
                android:layout_height="589dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="220dp"
                android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bf1" />

            <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/burg" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Шефбургер"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView7" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="14dp"
                android:layout_height="19dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="52dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.113"
                app:layout_constraintStart_toEndOf="@+id/imageView9"
                app:layout_constraintTop_toBottomOf="@+id/imageView7"
                app:srcCompat="@drawable/flame" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.473"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:srcCompat="@drawable/star" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView9"
            app:layout_constraintHorizontal_bias="0.567"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView7"
            app:srcCompat="@drawable/time" />

            <TextView
                android:id="@+id/textViewTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="15 min"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView10"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="4.6"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/imageView8"
                app:layout_constraintHorizontal_bias="0.233"
                app:layout_constraintStart_toEndOf="@+id/imageView9"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <!-- Total Price TextView -->

            <TextView
                android:id="@+id/textViewCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:text="290 cal"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView8"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Шефбургер добавки"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView9" />

            <TextView
                android:id="@+id/textViewKetchup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="Сыр"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/textViewCheese"
                app:layout_constraintStart_toStartOf="@+id/textViewCheese"
                app:layout_constraintTop_toBottomOf="@+id/textViewCheese" />

            <TextView
                android:id="@+id/textViewCheese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Кетчуп"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/textViewTotalPrice"
                app:layout_constraintStart_toStartOf="@+id/textViewTotalPrice"
                app:layout_constraintTop_toBottomOf="@+id/textViewTotalPrice" />

            <Button
                android:id="@+id/buttonMinusKetchup"
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:layout_marginTop="36dp"
                android:backgroundTint="#FBDE3F"
                android:text="-"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/buttonMinusCheese"
                app:layout_constraintStart_toStartOf="@+id/buttonMinusCheese"
                app:layout_constraintTop_toBottomOf="@+id/buttonMinusCheese"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/buttonPlusKetchup"
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:layout_marginTop="36dp"
                android:backgroundTint="#FBDE3F"
                android:gravity="center"
                android:text="+"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="@+id/buttonPlusCheese"
                app:layout_constraintStart_toStartOf="@+id/buttonPlusCheese"
                app:layout_constraintTop_toBottomOf="@+id/buttonPlusCheese"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/buttonMinusCheese"
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:layout_marginStart="-18dp"
                android:layout_marginTop="4dp"
                android:backgroundTint="#FBDE3F"
                android:text="-"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/imageView10"
                app:layout_constraintTop_toBottomOf="@+id/textViewTotalPrice"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/buttonPlusCheese"
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="-18dp"
                android:backgroundTint="#FBDE3F"
                android:text="+"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="@+id/textViewCalories"
                app:layout_constraintTop_toBottomOf="@+id/textViewTotalPrice"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textViewTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="150₽ "
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <Button
                android:id="@+id/buttonMinusBurger"
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:layout_marginTop="36dp"
                android:backgroundTint="#FBDE3F"
                android:text="-"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/buttonMinusSalad"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/buttonMinusSalad"
                app:layout_constraintTop_toBottomOf="@+id/buttonMinusSalad"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/buttonPlusBurger"
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:layout_marginTop="36dp"
                android:backgroundTint="#FBDE3F"
                android:text="+"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="@+id/buttonPlusSalad"
                app:layout_constraintStart_toStartOf="@+id/buttonPlusSalad"
                app:layout_constraintTop_toBottomOf="@+id/buttonPlusSalad"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textViewBurgerCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="52dp"
                android:text="Котлета"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/textViewSaladCounter"
                app:layout_constraintStart_toStartOf="@+id/textViewSaladCounter"
                app:layout_constraintTop_toBottomOf="@+id/textViewSaladCounter" />

            <Button
                android:id="@+id/buttonMinusSalad"
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:layout_marginTop="36dp"
                android:backgroundTint="#FBDE3F"
                android:text="-"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/buttonMinusKetchup"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/buttonMinusKetchup"
                app:layout_constraintTop_toBottomOf="@+id/buttonMinusKetchup"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/buttonPlusSalad"
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:layout_marginTop="44dp"
                android:backgroundTint="#FBDE3F"
                android:text="+"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="@+id/buttonPlusKetchup"
                app:layout_constraintStart_toStartOf="@+id/buttonPlusKetchup"
                app:layout_constraintTop_toBottomOf="@+id/buttonPlusKetchup"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textViewSaladCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:text="Салат"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/textViewKetchup"
                app:layout_constraintStart_toStartOf="@+id/textViewKetchup"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <Button
                android:id="@+id/Sign_UP"
                android:layout_width="331dp"
                android:layout_height="55dp"
                android:layout_marginTop="27dp"
                android:layout_weight="1"
                android:backgroundTint="#FBDE3F"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="Добавить корзину"
                android:textAllCaps="false"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewBurgerCounter"
                app:strokeColor="#000000"
                app:strokeWidth="2dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>